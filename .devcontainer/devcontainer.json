{
  "name": "My Codespace Project",
  "image": "mcr.microsoft.com/devcontainers/universal:latest",


  "containerEnv": {
    "VITE_APP_API_URL": "https://${CODESPACE_NAME}-8088.app.github.dev"
  },


  "forwardPorts": [5173, 8088],

  "portsAttributes": {
    "5173": {
      "label": "Frontend App (Vite)",
      "onAutoForward": "openBrowser"
    },
    "8088": {
      "label": "Backend API",
      "onAutoForward": "notify"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
      ]
    }
  }


}